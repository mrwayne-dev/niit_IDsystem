Options +FollowSymlinks
RewriteEngine On

# âš  Allow direct access to these folders (do NOT rewrite)
RewriteRule ^(assets|backend|sql|temp_pdfs|vscode)($|/) - [L]

# ===============================
# 1. Rewrite / to /index.php
# ===============================
RewriteRule ^$ index.php [L]

# ===============================
# 2. Rewrite /verify to verify.php
# ===============================
RewriteRule ^verify/?$ verify.php [L]

# ===============================
# 3. Prevent .php exposure (optional but recommended)
# ===============================
RewriteCond %{THE_REQUEST} \s/+(.*)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# ===============================
# 4. Enable pretty URLs for only index & verify
# ===============================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ $1.php [L]
